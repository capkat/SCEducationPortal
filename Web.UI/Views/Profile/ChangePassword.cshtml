
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model SCEducationPortal.Business.Commons.Models.UserModels.UpdatePasswordRequest
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Şifre Değiştir</h2>
<hr />
<div>
    <div class="row">
        <div class="col-md-3">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item"><a class="nav-link" id="profile" asp-controller="Profile" asp-action="Index">Profile</a></li>
                <li class="nav-item"><a class="nav-link" id="change-password" asp-controller="Profile" asp-action="MyEducationList">Oluşturduğun Eğitimler</a></li>
                <li class="nav-item"><a class="nav-link" id="two-factor" asp-controller="Profile" asp-action="TrainingsIAttended">Aldığın Eğitimler</a></li>
                <li class="nav-item"><a class="nav-link active" id="email" asp-controller="Profile" asp-action="ChangePassword">Şifre Değiştir</a></li>

            </ul>
        </div>
        <div class="col-md-9">
            <div class="row">
                @if (ViewBag.StatusMessage != null)
                {
                    <div class="col-md-12">
                        <div class="alert alert-info alert-dismissible" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            @ViewBag.StatusMessage
                        </div>
                        <br />
                    </div>

                }

                <div class="col-md-6">
                    <form id="change-password-form" method="post" asp-action="ChangePassword">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="OldPassword"></label>
                            <input asp-for="OldPassword" class="form-control" />
                            <span asp-validation-for="OldPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NewPassword"></label>
                            <input asp-for="NewPassword" class="form-control" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword"></label>
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



